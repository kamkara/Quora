

<!-- component -->
<!-- This is an example component -->
<div class="h-screen font-sans login bg-cover">
<div class="container mx-auto h-full flex flex-1 justify-center items-center">
    <div class="w-full max-w-lg">
      <div class="leading-loose">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        
            <p class="text-white font-medium text-center text-lg font-bold">CONNEXION</p>
              <div class="">
                <label class="block text-sm text-white" for="email">E-mail</label>
               <%= f.email_field :email, class:"form-control focus:outline-none focus:ring focus:border-blue-100", hide_label: true,
             placeholder:"Adresse email." %>
                
              </div>
              <div class="mt-2">
                <label class="block  text-sm text-white">Senha</label>
            
                  <%= f.password_field :password, autocomplete: "current-password", class:"w-full px-5 py-1 text-gray-700 bg-gray-300 rounded focus:outline-none focus:bg-white",
            placeholder:"Mot de passe" %>
              </div>

              <div class="mt-4 items-center flex justify-between">
          
            <%= f.submit "Se Connectez", class:"px-4 py-1 text-white font-light tracking-wider bg-gray-900 hover:bg-gray-800 rounded" %>
                <a class="inline-block right-0 align-baseline font-bold text-sm text-500 text-white hover:text-red-400"
                  href="#">Esqueceu a senha ?</a>
              </div>
              <div class="text-center">
                <a class="inline-block right-0 align-baseline font-light text-sm text-500 hover:text-red-400">
                    Criar uma conta
                </a>
              </div>
          <div class="actions">
          </div>
        
        <% end %>
        
<%= render "devise/shared/links" %>

      </div>
    </div>
  </div>
</div>
